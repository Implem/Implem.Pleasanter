<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <targets>
        <target name="logfile" xsi:type="File" fileName="Logs/${date:format=yyyyMMdd}.txt" layout="${longdate} ${level} ${message}" keepFileOpen="true" concurrentWrites="true" openFileCacheTimeout="5" archiveEvery="None" />

        <target name="logconsole" xsi:type="Console" layout="${message}" />
    </targets>

    <rules>
        <logger name="*" minlevel="Debug" writeTo="logfile" />
        <logger name="*" minlevel="Debug" writeTo="logconsole" />
    </rules>
</nlog>